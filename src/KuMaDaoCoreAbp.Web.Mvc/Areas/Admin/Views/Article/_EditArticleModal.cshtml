@using KuMaDaoCoreAbp.Web.Areas.Admin.Models.Common.Modals
@model KuMaDaoCoreAbp.Web.Areas.Admin.Models.Article.EditArticleModal
@{
    Layout = null;
    var temp = Model.GetArticleForEditOutput.Article;
}
@*@Html.Partial("~/Areas/Admin/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditRole")))*@

<div class="modal-body">
    <form name="ArticleUpdateForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@temp.Id" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label for="" class="form-label">文章名</label>
                        <input id="title" type="text" name="Title" value="@temp.Title" required maxlength="32" minlength="2" class="validate form-control">
                     
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label for="displayname" class="form-label">简介</label>
                        <input id="body" type="text" name="Body" value="@temp.Body" required maxlength="32" minlength="2" class="validate form-control">
                       
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label for="displayname" class="form-label">分类</label>
                        <input id="Category" type="text" name="Category" value="@temp.CategoryId" required maxlength="32" minlength="2" class="validate form-control">
                      
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label for="article-description" class="form-label">Role Description</label>
                        <textarea id="article-description" name="Description" class="validate form-control"></textarea>
                       
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
    <button type="button" id="ArticleUpdate_Confrim" class="btn btn-primary waves-effect">@L("Save")</button>
</div>

<script src="~/view-resources/Views/Article/_editArticleModal.js" asp-append-version="true"></script>

