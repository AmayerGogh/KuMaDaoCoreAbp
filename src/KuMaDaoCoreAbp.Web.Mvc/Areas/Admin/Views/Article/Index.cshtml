    <script src="~/pugins/jquery.validate.js"></script>
<script src="~/pugins/bootstrap-table/bootstrap-table.js"></script>
    <environment names="Development">
        <script src="~/view-resources/Views/Article/index.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Article/Index.min.js" asp-append-version="true"></script>
    </environment>
    <script>
         window.operateEvents = {
                'click .btn_edit': function (e, value, row, index) {
                    window.location.href = "/article/edit/" + row.id;
                },
                'click .btn_del': function (e, value, row, index) {
                    delThisRow("/article/delete/" + row.id);
                },
                'click .btn_sign':function(e, value, row, index){
                       var str ="<div class='ibox-content' style='padding:0px;'> <div class='' id='gtd_cm'><div class='sk-spinner sk-spinner-rotating-plane'></div></div></div>";
                        layer.open({
                            type: 1,
                            area: ['480px', '580px'], //宽高
                            content:str
                        });
                        $("#gtd_cm").load("/static/activity/"+row.id);
                }
            }
            window.sortEvents = {
                'change .bs_row_sort': function (e, value, row, index) {
                    var sort = $(this).val();
                    if (isNaN(sort)) {
                        return false;
                    }
                    $.post("/article/updateSort", { id: row.id, sort: sort }, function (data) {
                        alertMsg(data.message)
                        if (data.status >= 0) {
                            bsTableReload();
                        }
                    })

                }
            }
            var column = [
                 // {   checkbox: true},
                 // { title: "Id", field: "Id", },
                  { title: "文章标题", field: "title", width: "40%" },
                  { title: "分类", field: "type", },
                  { title: "查看次数", field: "seeCount", },
                //  { title: "排序", events: sortEvents, formatter: sortFormatter, width: "8%" },
                  { title: "是否置顶", formatter: statusFormatter },
                  { title: "发布日期", field: "createTime", },
                  { title: "操作", events: operateEvents, formatter: operateFormatter, },//自定义方法，添加操作按钮
            ];
            var table = $('#table').bootstrapTable({
                url: '/api/services/app/Article/GetPagedArticlesAsync',
                toolbar: '#toolbar',
                method: 'post',
                striped: true,
                pagination: true,
                uniqueId: "id",                    //每一行的唯一标识，一般为主键列
                // singleSelect: true,
                pageNumber: 1,                       //初始化加载第一页，默认第一页
                pageSize: 25,
                pageList: [10, 15, 25, 50, 100],
                sidePagination: "server", //服务端请求
                search: true,
                strictSearch: true,
                showColumns: true,                  //是否显示所有的列
                showRefresh: true,                  //是否显示刷新按钮
                clickToSelect: true,                //是否启用点击选中行
                columns: column,
                queryParams: function (params) {
                    params.searches = {                      
                    }
                    return params;
                },       
            });

            function sortFormatter(value, row, index) {
                return '<input type="text" value="' + row.sort + '" class="form-select bs_row_sort" />'
            }

            function statusFormatter(value, row, index) {
                if (row.isTop) {
                    return '<span class="label label-primary">置顶</span>'
                } else {
                    return '<span>-</span>'
                }
            }
            function operateFormatter(value, row, index) {//赋予的参数
               
                    return ' <div class="btn-group"><button class="btn-white btn btn-xs btn_edit">编辑</button> <button class="btn-white btn btn-xs btn_del">删除</button></div>'
                


            }
    </script>
}
